---
import Layout from "../layouts/Layout.astro";
import HeroSection from "../components/HeroSection";
import Navbar from "../components/Navbar";
import { Button, Input } from "@nextui-org/react";
import PracticeAreas from '../components/PracticeAreas.astro'
import Awards from '../components/Awards'
import KnowUs from '@components/KnowUs.astro'
import Footer from '@components/Footer.astro'
---

<Layout title="Inicio - Igra">
  <main>
    <Navbar />
    <HeroSection client:load />
    <div
      class="flex flex-col md:flex-row justify-center items-center bg-[#e5e5e4] h-auto py-6 gap-8"
    >
      <p class="text-secundary text-lg font-semibold">
        ¿En qué te podemos asistir?
      </p>
      <div class="flex w-full md:w-auto items-center justify-center">
        <Input
          radius="none"
          size="sm"
          className="w-64 md:w-72 rounded-full"
          placeholder="Encuentra un experto o busca en el sitio..."
          classNames={{
            input: ["text-xs", "placeholder:text-lightGray", "px-2"],
            inputWrapper: ["bg-white", "h-12", "rounded-l-2xl"],
          }}
        />
        <Button
          radius="none"
          className="h-12 rounded-r-2xl bg-secundary text-white"
          client:load
        >
          Buscar
        </Button>
      </div>
    </div>
    <PracticeAreas/>
    <Awards client:load/>
    <KnowUs/>
    <Footer/>
  </main>
</Layout>